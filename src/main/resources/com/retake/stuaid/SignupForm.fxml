<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.retake.stuaid.SignupController">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="299.0" layoutY="38.0" prefHeight="50.0" prefWidth="102.0" text="Sign Up">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <TextField fx:id="txtEmail" layoutX="218.0" layoutY="198.0" prefHeight="26.0" prefWidth="263.0" promptText="Email" style="-fx-border-color: #B15EFF;" />
            <PasswordField fx:id="txtPass" layoutX="219.0" layoutY="245.0" prefHeight="26.0" prefWidth="263.0" promptText="Password" style="-fx-border-color: #B15EFF;" />
            <PasswordField fx:id="txtConfirmPass" layoutX="218.0" layoutY="294.0" prefHeight="26.0" prefWidth="263.0" promptText="Confirm Password" style="-fx-border-color: #B15EFF;" />
            <Button fx:id="txtSignUp" layoutX="218.0" layoutY="369.0" mnemonicParsing="false" onAction="#gotoLoginPagebyClickingSignUp" prefHeight="35.0" prefWidth="263.0" style="-fx-background-color: #B15EFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Sign Up" />
            <Label layoutX="260.0" layoutY="95.0" text="Already a member?">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="txtLogIn" layoutX="377.0" layoutY="88.0" mnemonicParsing="false" onAction="#gotoLoginPagebyClickingLogIn" prefHeight="32.0" prefWidth="62.0" style="-fx-background-color: transparent; -fx-text-fill: #B15EFF; -fx-cursor: hand; -fx-underline: true;" text="Log in">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TextField fx:id="txtName" layoutX="218.0" layoutY="151.0" prefHeight="26.0" prefWidth="263.0" promptText="Name" style="-fx-border-color: #B15EFF;" />
            <CheckBox fx:id="chkboxTeacher" layoutX="218.0" layoutY="332.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="92.0" text="I'm Teacher" />
            <Label fx:id="lblPassMsg" layoutX="219.0" layoutY="280.0" style="-fx-text-fill: red; visibility: false;" text="Password doesn't match" textFill="RED">
               <font>
                  <Font size="9.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
